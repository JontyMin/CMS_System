
@{
	Layout = null;
}


<!DOCTYPE html>
<html>
<head>
	<title></title>
	<meta charset="utf-8" />
	<link href="~/Areas/Admin/easyui/1.5.2/themes/default/easyui.css" rel="stylesheet" />
	<link href="~/Areas/Admin/css/wu.css" rel="stylesheet" />
	<link href="~/Areas/Admin/css/icon.css" rel="stylesheet" />
	<script src="~/Areas/Admin/js/jquery-1.10.2.js"></script>
	<script src="~/Areas/Admin/js/common.js"></script>
	<script src="~/Areas/Admin/easyui/1.5.2/jquery.easyui.min.js"></script>
	<script src="~/Areas/Admin/easyui/1.5.2/locale/easyui-lang-zh_CN.js"></script>
	<link href="~/Areas/Admin/layui/css/layui.css" rel="stylesheet" />
	<script src="~/Areas/Admin/layui/layui.js"></script>
</head>
<body>
	<div style="margin:20px 0;"></div>
	<div title="添加文章" style="width:98%;padding:30px 60px;" class="easyui-panel">
		<form id="ff" class="easyui-form" method="post" data-options="novalidate:true">
			<div style="margin-bottom:20px">
				<input id="title" name="title" data-options="label:'标题:',required:true" class="easyui-textbox" style="width:100%;max-width:400px;">
			</div>
			<div style="margin-bottom:20px">
				<select id="cid" name="cid" data-options="label:'所属栏目:',editable:false,required:true" class="easyui-combobox" style="width:100%;max-width:400px;">

				</select>
			</div>
			<div style="margin-bottom:20px">
				<input id="author" name="author" data-options="label:'作者:'" class="easyui-textbox" style="width:100%;max-width:400px;">
			</div>
			<div style="margin-bottom:20px">
				<input name="uid" id="uid" data-options="label:'发布人:'" value="admin" readonly class="easyui-textbox" style="width:100%;max-width:400px;">
			</div>
			<div style="margin-bottom:20px">
				<input type="checkbox" name="istop" id="istop" data-options="label:'置顶:'" class="easyui-textbox" style="width:120px">
			</div>
			<div style="margin-bottom:20px">
				文章内容: <span id="editor_error" style="color:red;display:none;">文章内容为必填项！</span>
			</div>
			<div style="margin-bottom:20px" id="demo">
				
			</div>
		</form>
		<div style="text-align:center;padding:5px 0">
			<a  class="easyui-linkbutton" id="bt1" style="width:120px" data-options="iconCls:'icon-save'">存为草稿</a>
			<a  class="easyui-linkbutton" id="bt2" style="width:120px" data-options="iconCls:'icon-save'">发布</a>
		</div>
	</div>
	<script>
		$(function () {
			$("#cid").combobox({
				url: "GetCategory",
				valueField: 'cid',
				textField: 'ctitle'
			});
			layui.use('layedit', function () {
				var layedit = layui.layedit;
				var index=layedit.build('demo', { //建立编辑器
					tool: [
						'strong' //加粗
						, 'italic' //斜体
						, 'underline' //下划线
						, 'del' //删除线
						, '|' //分割线
						, 'left' //左对齐
						, 'center' //居中对齐
						, 'right' //右对齐
						, 'face'//表情
					]
				});
				$("#bt1").click(function () {
					if ($("#title").val() == "" || $("#title").val() == null) {
						layer.msg("文章标题不能为空");
					} else if($("#cid option:selected").val()=="") {
						layer.msg("请选择文章所属栏目");
					}else if (layedit.getContent(index) =="") {
						layer.msg("文章内容不能为空");
					}
				

				});
			});

		})
	</script>
</body>
</html>